@model Cassette.Models.LoginModel
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <input class="form-control" placeholder="Login" type="text" asp-for="Login"/>
                <span asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Enter" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>